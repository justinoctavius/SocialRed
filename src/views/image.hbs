<div class="card image">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2>{{image.title}}</h2>
        <button class="btn btn-danger" id="btn-delete" data-id="{{image.uniqueId}}">
            <i class="fa fa-times"></i> Delete
        </button>
    </div>
    <div class="card-body">
        <p>{{image.description}}</p>
        <div class="text-center ">
            <img src="../public/upload/{{image.filename}}" class="img-fluid img-thumbnail">
        </div>
    </div>
    <div class="d-flex card-footer justify-content-between align-items-center">
        <button class="btn btn-success" id="btn-like" data-id="{{image.uniqueId}}">
            <i class="fas fa-heart"></i>Like
        </button>
        <p>
            <span class="likes-count">{{image.likes}}</span>
            <i class="fas fa-heart"></i>
        </p>
        <p>
            <span class="views-count">{{image.views}}</span>
            <i class="fas fa-eye"></i>
        </p>
        <p>
            <i class="fas fa-clock"></i>
            {{timeAgo image.timestamp}}
        </p>
    </div>
</div>

<div class="card mt-2">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3>Comments</h3>
        <button class="btn btn-info" id="btn-toggle-comment">
            <i class="fa fa-comment-o">
                </i> - Post a Comment - <i class="fa fa-angle-down" id="btn-toggle-comment-icon">
            </i>
        </button>
    </div>
    <div class="card-body">
        <blockquote id="comment-box" style="display: none;">
            <form action="/images/{{image.uniqueId}}/comment" method="POST">
                <div class="from-group">
                    <input type="text" class="form-control" name="name" placeholder="Name">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="email" placeholder="Email">
                </div>
                <div class="form-group">
                    <textarea name="comment" rows="2" class="form-control" placeholder="Comment"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-success" id="btn-comment">
                        <i class="fa fa-comment"></i> Post
                    </button>
                </div>
            </form>
        </blockquote>
        <ul class="list-group comments">
            {{#each comments}}
                <li class="list-group-item">
                    <a href="#" class="col text-center">
                        <img src="http://gravatar.com/avatar/{{gravatar}}?d=monsterid&s=45">
                    </a>
                    <blockquote class="list-group-item">
                        <p class="lead">{{comment}}</p>
                        <footer class="blockquote-footer d-flex justify-content-end">
                            {{name}} - {{timeAgo timeStamp}}
                        </footer>
                    </blockquote>
                </li>
            {{/each}}
        </ul>
    </div>
</div>