<div class="card">
    <div class="card-header bg-dark">
        <h3 class="card-title text-white">
            <i class="far fa-image"></i> Upload an Image
        </h3>
    </div>
    <div class="card-body">
        <form action="/images" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <div class="input-group">
                    <div class="custom-file">
                        <input type="file" name="image" class="custom-file-input" id="inputGroup"
                            aria-describedby="inputGroupFileAddon" required>
                        <label class="custom-file-label" for="image">Choose file</label>
                    </div>
                </div>
            </div>
            <div class="from-group">
                <input type="text" name="title" class="form-control" placeholder="Title for the image" required>
            </div>
            <div class="form-group">
                <textarea name="description" class="form-control" rows="2" placeholder="Image Description"
                    required></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-success">
                    <i class="fa fa-upload"></i> Upload Image
                </button>
            </div>
        </form>
    </div>
</div>
{{#if images}}
<div class="card mt-2">
    <div class="card-header bg-dark text-white">
        <h3> <i class="fa fa-images"></i> Recent upload</h3>
    </div>
    <div class="card-body">
        <div class="row">
            {{#each images}}
                <div class="col-md-4 p-2">
                    <a href="/images/{{uniqueId}}">
                        <img src="../public/upload/{{filename}}" alt="" 
                        class="w-100 h-100 img-thumbnail"
                        style="max-width: 200px; max-height: 200px;">
                    </a>
                </div>
            {{/each}}
        </div>
    </div>
</div>
{{/if}}